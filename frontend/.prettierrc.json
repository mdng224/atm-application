{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "all",
  "tabWidth": 2,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "vueIndentScriptAndStyle": true,
  "htmlWhitespaceSensitivity": "ignore",

  "plugins": ["prettier-plugin-tailwindcss"],

  "importOrder": [
    "^vue",
    "^@?\\w",
    "",
    "^@/api/(.*)$",
    "^@/components/(.*)$",
    "^@/composables/(.*)$",
    "^@/router/(.*)$",
    "^@/stores/(.*)$",
    "^@/views/(.*)$",
    "",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
